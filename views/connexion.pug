						td
							label.labelinpt Mot de passe:
							input.fieldinpt(type="password" name="mdp" required autocomplete="off")
					tr
						td
							a(style="-webkit-appearance: none;size:0.7em;" href="/forgot-password" type="submit") Mot de passe oubli√© ?
					tr
						td
							input#latitude(type='hidden' name='latitude' value= lat)
							input#longitude(type='hidden' name='longitude' value= long)
							input.validbut(type="submit" value='Se connecter' name="connect")
